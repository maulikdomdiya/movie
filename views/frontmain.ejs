<body>
    <div style="background-color: rgb(51, 53, 69);;" class="container-fluid">
        <header class="d-flex justify-content-between align-items-center container">
            <div>
                <img src="../images/headlogo.png" alt="" style="width: 130px; height: 50px; object-fit: contain;">
            </div>
            <nav class="text-center">
                <ul class="d-flex mt-4">
                    <li style="margin-top: 4px; list-style: none; margin-right: 20px; color: white;"><span>Surat</span></li>
                    <li style="margin-top: 5px; list-style: none; margin-right: 10px; text-align: center;">
                        <a href="/userlogin" class="text-light btn-danger" style="padding: 5px 15px; border-radius: 5px; text-decoration: none;">Sign In</a>
                        <a href="/userlogout" class="text-light btn-danger" style="padding: 5px 15px; border-radius: 5px; text-decoration: none;">Sign Out</a>
                        <% if(locals.user){ %>
                        <a href="/cart/<%= locals.user.id %>" class="text-light btn-danger" style="padding: 5px 15px; border-radius: 5px; text-decoration: none;">Cart</a>
                        <% } else { %>
                            <a href="/userlogin" class="text-light btn-danger" style="padding: 5px 15px; border-radius: 5px; text-decoration: none;">Cart</a>
                            <% } %>
                    </li>
                    <li style=" list-style: none; margin-right: 10px; text-align: center;"><img src="../images/toggle1 icon.png" alt="" style="width: 30px; height: 30px; margin-left: 10px; "></li>
                </ul>
            </nav>
        </header>
    </div>
    <div style="background-color: rgb(31, 37, 51); height: 40px;" class="container-fluid">
        <header class="d-flex justify-content-between align-items-center container ">
            <div class="mt-2">
                <nav>
                    <ul class="d-flex m-0 p-0">
                        <li style="list-style: none;"><a href="" style="font-size: 14px; text-decoration: none;" class="text-light">Movies</a></li>
                        <li style="list-style: none;"><a href="" style="font-size: 14px; margin-left: 7px; margin-right: 7px; text-decoration: none;" class="text-light">Stream</a></li>
                        <li style="list-style: none;"><a href="" style="font-size: 14px; margin-left: 7px; margin-right: 7px; text-decoration: none;" class="text-light">Events</a></li>
                        <li style="list-style: none;"><a href="" style="font-size: 14px; margin-left: 7px; margin-right: 7px; text-decoration: none;" class="text-light">Plays</a></li>
                        <li style="list-style: none;"><a href="" style="font-size: 14px; margin-left: 7px; margin-right: 7px; text-decoration: none;" class="text-light">Sports</a></li>
                        <li style="list-style: none;"><a href="" style="font-size: 14px; text-decoration: none;" class="text-light">Buzz</a></li>
                    </ul>
                </nav>
            </div>
            <nav>
                <ul class="d-flex m-0 p-0">
                    <li style="list-style: none;"><a href="" style="margin-right: 7px; text-decoration: none; font-size: 14px;" class="text-light">LiveYourShow</a></li>
                    <li style="list-style: none;"><a href="" style="margin-left: 7px; margin-right: 7px; text-decoration: none; font-size: 14px;" class="text-light">Corporate</a></li>
                    <li style="list-style: none;"><a href="" style="font-size: 14px; margin-left: 7px; margin-right: 7px; text-decoration: none;" class="text-light">Offers</a></li>
                    <li style="list-style: none;"><a href="" style="font-size: 14px; margin-left: 7px; margin-right: 7px; text-decoration: none;" class="text-light">Gift Cards</a></li>
                </ul>
            </nav>
        </header>
    </div>

    <section>
        <div id="carouselExampleInterval" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active" data-bs-interval="1000">
                <img src="/images/carousel/banner_1.jpg" class="d-block w-100" alt="..." style="object-fit: cover;">
              </div>
              <div class="carousel-item" data-bs-interval="1000">
                <img src="/images/carousel/banner_2.jpg" class="d-block w-100 " alt="..."  style="object-fit: cover;">
              </div>
              <div class="carousel-item" data-bs-interval="1000">
                <img src="/images/carousel/banner_3.jpg" class="d-block w-100" alt="..." style="object-fit: cover;">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
    </section>

    <section style="margin-top: 70px;">
        <div class="container">
            <div class="">
                <h3>Recommended Movies</h3>
            </div>
            <div class="d-flex" style="flex-wrap: wrap;">
                <% for (var c of moviedata) {%>
                <div class="mt-4 mb-3">
                    <div class="w-25 me-4">
                        <div style="width: 300px; height: 600px; border: 1px solid black;  padding: 10px;">
                            <img src="<%= c.showname.image %>" alt="" style="width: 100%; height: 450px; object-fit: cover;">
                            <div class="mt-2">
                                <h3><%= c.showname.name%><h3>
                                <h6 style="color: rgb(103, 111, 120);"><%= c.showname.detail%></h6>
                                <h5><%= c.showname.price%> â‚¹</h5> 
                               <div class="d-flex">
                                <h5><%= c.time%></h5> 
                                <% if(locals.user) { %>
                                    <div >
                                        <a href="/bookticket/<%= c.id %>" style="border-radius: 6px; margin-left: 80px; color: black; padding: 5px 12px;" class="btn-danger">Book Show</a>
                                    </div>
                                    <% } else { %>
                                        <div>
                                            <a href="/userlogin" style="border-radius: 6px; margin-left: 80px; color: black; padding: 5px 12px;" class="btn-danger">Book Show</a>
                                        </div>
                                <% } %>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }%>
            </div>
           
        </div>
